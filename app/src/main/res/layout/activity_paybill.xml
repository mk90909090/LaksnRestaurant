<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".paybill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backtb"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:divider="@color/ic_launcher_background"
        android:showDividers="middle"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:textColor="@color/black"
            android:gravity="right"
            android:text="Selected Item" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_rupee_indian"
            android:gravity="left"
            android:text="Price" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backtb"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0.5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:divider="@color/ic_launcher_background"
        android:showDividers="middle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/allitem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:gravity="right"
            android:text="Item" />

        <TextView
            android:id="@+id/allprice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="left"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:text="Price" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="10sp"
            android:textSize="16sp"
            android:textColor="@color/ic_launcher_background"
            android:text="Total Food Price"/>
        <TextView
            android:id="@+id/totalfoodprice"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:background="@drawable/backtb"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:textColor="@color/ic_launcher_background"
            android:text="Total"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="10sp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/ic_launcher_background"
            android:text="Tip (10%)"/>
        <TextView
            android:id="@+id/tip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:background="@drawable/backtb"
            android:textColor="@color/ic_launcher_background"
            android:text="Total"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:layout_marginRight="10sp"
            android:textSize="16sp"
            android:textColor="@color/ic_launcher_background"
            android:text="Grand Total"/>
        <TextView
            android:id="@+id/grandtotal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:layout_marginRight="20sp"
            android:textStyle="bold"
            android:background="@drawable/backtb"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_rupee_indian"
            android:textColor="@color/ic_launcher_background"
            android:text="Total"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make Sure You are at the Counter"
        android:layout_marginTop="70dp"
        android:textColor="@color/ic_launcher_background"
        android:gravity="center">

    </TextView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:background="@drawable/backtext"
        android:layout_gravity="center"
        android:gravity="center"
        android:showDividers="middle"
        android:divider="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/completepayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="COMPLETE PAYMENT" />
    </LinearLayout>

</LinearLayout>