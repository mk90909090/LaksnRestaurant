<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FDEEA3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You have Selected "
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/ic_launcher_background"
            android:textSize="14sp"
            android:gravity="center">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backtb"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:divider="@color/ic_launcher_background"
            android:showDividers="middle"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:gravity="right"
                android:text="Selected Item" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_rupee_indian"
                android:gravity="left"
                android:text="Price" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backtb"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="0.5dp"
            android:divider="@color/ic_launcher_background"
            android:showDividers="middle"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:gravity="right"
                android:text="Item" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:text="Price" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:background="@drawable/backtext"
        android:layout_gravity="center"
        android:gravity="center"
        android:showDividers="middle"
        android:divider="@color/white"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:text="CANCEL" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:textSize="16sp"
            android:text="PROCEED" />
    </LinearLayout>
</LinearLayout>