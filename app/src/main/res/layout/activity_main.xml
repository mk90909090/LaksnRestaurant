<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

         <TextView
             android:id="@+id/textView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="40dp"
             android:textStyle="bold"
             android:gravity="center"
             android:textSize="26sp"
             android:textColor="#011371"
             android:text="LAKSN Restaurant" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="-3dp"
             android:gravity="center"
             android:text="Order Food and Pay Bill Online"
             android:textColor="#011371"
             android:textSize="14sp"
             tools:ignore="HardcodedText">

         </TextView>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="435dp"
             android:background="@drawable/gradientback"
             android:orientation="vertical">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="45dp"
                 android:gravity="center"
                 android:orientation="horizontal">

                 <ImageView
                     android:id="@+id/imageView"
                     android:layout_width="60dp"
                     android:layout_height="100dp"
                     android:layout_marginRight="40dp"
                     app:srcCompat="@drawable/ic_baseline_food_bank_24" />

                 <ImageView
                     android:id="@+id/imageView2"
                     android:layout_width="60dp"
                     android:layout_height="100dp"
                     android:layout_gravity="center"
                     android:layout_marginRight="40dp"
                     app:srcCompat="@drawable/ic_baseline_emoji_people_24" />

                 <ImageView
                     android:id="@+id/imageView3"
                     android:layout_width="45dp"
                     android:layout_height="106dp"
                     android:layout_gravity="center"
                     app:srcCompat="@drawable/ic_baseline_payments_24" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:layout_marginTop="-16dp"
                 android:gravity="center"
                 android:orientation="horizontal">

                 <TextView
                     android:id="@+id/orderfood"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginRight="40dp"
                     android:gravity="center"
                     android:text="Order Food"
                     android:textColor="@color/ic_launcher_background"
                     android:textSize="15sp"
                     android:textStyle="bold">

                 </TextView>

                 <TextView
                     android:id="@+id/callwaitor"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginRight="30dp"
                     android:gravity="center"
                     android:text="Call Waitor"
                     android:textColor="@color/ic_launcher_background"
                     android:textSize="15sp"
                     android:textStyle="bold">

                 </TextView>

                 <TextView
                     android:id="@+id/paybill"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:gravity="center"
                     android:text="Pay Bill"
                     android:textColor="@color/ic_launcher_background"
                     android:textSize="15sp"
                     android:textStyle="bold">

                 </TextView>
             </LinearLayout>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="60dp"
                 android:gravity="center"
                 android:text="Extra 30% Discount"
                 android:textColor="#011371"
                 android:textSize="20sp"
                 android:textStyle="italic"
                 tools:ignore="HardcodedText">

             </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vieworders"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/backtext"
                    android:gravity="center"
                    android:text="My Orders"
                    android:layout_marginRight="50dp"
                    android:textColor="#FFFFFF"
                    android:textSize="18.5sp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:id="@+id/orderfood1"
                    android:layout_width="125dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/backtext"
                    android:gravity="center"
                    android:text="Order Now"
                    android:textColor="#FFFFFF"
                    android:textSize="18.5sp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>


             <ImageView
                 android:id="@+id/imageView4"
                 android:layout_width="300dp"
                 android:layout_height="200dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="-14dp"
                 app:srcCompat="@drawable/pic" />


         </LinearLayout>

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:text="STAY HAPPY AND STAY SAFE"
             android:layout_gravity="center"
             android:gravity="center"
             android:textStyle="bold"
             android:textSize="14sp"
             android:textColor="@color/ic_launcher_background">

         </TextView>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="12dp"
             android:layout_marginTop="20dp"
             android:fontFamily="@font/voces"
             android:text="Popular Dishes"
             android:textColor="@color/black"
             android:textSize="17sp"
             android:textStyle="bold">
         </TextView>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
             android:gravity="center"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/imageView6"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/pizza" />

             <ImageView
                 android:id="@+id/imageView7"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/burger" />

             <ImageView
                 android:id="@+id/imageView8"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/chicken" />

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginRight="15dp"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="3dp"
             android:gravity="center"
             android:orientation="horizontal">


             <TextView
                 android:id="@+id/textView2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginLeft="8dp"
                 android:textColor="@color/ic_launcher_background"
                 android:text="Pizza" />

             <TextView
                 android:id="@+id/textView3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:layout_marginLeft="60dp"
                 android:textColor="@color/ic_launcher_background"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:text="Burger" />

             <TextView
                 android:id="@+id/textView4"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginLeft="30dp"
                 android:textColor="@color/ic_launcher_background"
                 android:text="Fried Chicken" />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginTop="35dp"
             android:gravity="center"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:orientation="horizontal">

             <ImageView
                 android:id="@+id/imageView9"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/egg" />

             <ImageView
                 android:id="@+id/imageView10"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/cofee" />

             <ImageView
                 android:id="@+id/imageView11"
                 android:layout_width="70dp"
                 android:layout_height="80dp"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/kadaipaneer" />

         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"
             android:layout_marginRight="15dp"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="3dp"
             android:gravity="center"
             android:orientation="horizontal">


             <TextView
                 android:id="@+id/textView5"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginLeft="8dp"
                 android:textColor="@color/ic_launcher_background"
                 android:text="Egg Roll" />

             <TextView
                 android:id="@+id/textView6"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:layout_marginLeft="60dp"
                 android:textColor="@color/ic_launcher_background"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:text="Cold Coffee" />

             <TextView
                 android:id="@+id/textVie7"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:textSize="15sp"
                 android:textStyle="bold"
                 android:layout_marginLeft="30dp"
                 android:textColor="@color/ic_launcher_background"
                 android:text="Kadhai Paneer" />
         </LinearLayout>
         <TextView
             android:id="@+id/orderfood2"
             android:layout_width="125dp"
             android:layout_height="35dp"
             android:layout_gravity="right"
             android:layout_marginTop="13dp"
             android:layout_marginRight="25dp"
             android:background="@drawable/backtext"
             android:gravity="center"
             android:text="Order Now"
             android:textColor="#FFFFFF"
             android:textSize="18.5sp"
             android:textStyle="bold">

         </TextView>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Share Feedback or Give Any Suggestion"
             android:textStyle="normal"
             android:fontFamily="@font/voces"
             android:layout_gravity="center"
             android:gravity="center"
             android:layout_marginTop="50dp"
             android:textSize="17sp"
             android:textColor="@color/ic_launcher_background">
         </TextView>

         <EditText
             android:id="@+id/editfeedback"
             android:layout_width="match_parent"
             android:layout_height="100dp"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_gravity="center"
             android:gravity="left"
             android:paddingLeft="10dp"
             android:paddingTop="5dp"
             android:textColor="@color/ic_launcher_background"
             android:textSize="17dp"
             android:textStyle="normal"
             android:background="@drawable/editback"
             android:hint="Type here..."
             android:textColorHint="#434343">
         </EditText>
         <TextView
             android:id="@+id/submitfeedback"
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="Submit"
             android:textStyle="bold"
             android:textSize="17sp"
             android:textColor="@color/white"
             android:layout_gravity="right"
             android:layout_marginRight="20dp"
             android:layout_marginTop="5dp"
             android:gravity="center"
             android:background="@drawable/backtext">
         </TextView>

             <TextView
                 android:id="@+id/feedbackdone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="Thank You for Your Valuable FeedBack"
                 android:layout_marginRight="7dp"
                 android:layout_marginLeft="7dp"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:layout_marginTop="-100dp"
                 android:textSize="18sp"
                 android:textColor="#549C00">
             </TextView>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="200dp">

         </LinearLayout>




     </LinearLayout>


</ScrollView>